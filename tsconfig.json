{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"allowJs": true,
		"outDir": "ts/"
	},
	"files": [
		"index.ts"
	],
	"include": [
		"src/**/*",
		"abstracts/**/*"
	],
	"exclude": [
		"node_modules"
	]
}